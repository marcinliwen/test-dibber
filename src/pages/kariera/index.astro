---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import Breadcrump from "../../components/Breadcrump.astro";
---

<Layout title="Kariera">
  <Header />
  <Breadcrump
    breadcrumps={[
      {
        name: "Kariera",
        link: "/kariera",
      },
    ]}
  />
  <section>
    <div class="wrapper">
      <h1
        class="text-2xl lg:text-[54px] lg:leading-[64px] font-bold text-left mb-[54px]"
      >
        Kariera w Dibber
      </h1>
      <div class="dibber-container">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-[54px]">
          <div
            class="rounded-r_20 pt-[26px] pr-[28px] pb-[54px] pl-[34px] bg-secondary-200"
          >
            <span class="text-xl md:text-5xl mb-8 font-bold block">01.</span>
            <p class="text-base md:text-lg">
              Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc
              vulputate libero et velit interdum, ac aliquet odio mattis.
            </p>
          </div>
          <div
            class="rounded-r_20 pt-[26px] pr-[28px] pb-[54px] pl-[34px] bg-secondary-300"
          >
            <span class="text-xl md:text-5xl mb-8 font-bold block">02.</span>
            <p class="text-base md:text-lg">
              Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc
              vulputate libero et velit interdum, ac aliquet odio mattis.
            </p>
          </div>
          <div
            class="rounded-r_20 pt-[26px] pr-[28px] pb-[54px] pl-[34px] bg-secondary-300"
          >
            <span class="text-xl md:text-5xl mb-8 font-bold block">03.</span>
            <p class="text-base md:text-lg">
              Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc
              vulputate libero et velit interdum, ac aliquet odio mattis.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section>
    <div class="wrapper">
      <div class="max-w-[876px] mx-auto pb-20">
        <div class="grid md:flex gap-8 mb-14">
          <h5 class="md:min-w-[280px]">
            Dibber zatrudnia ponad 9000 pracowników na całym swiecie. Lorem
            ipsum.
          </h5>
          <p class="leading-8">
            Vorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam eu
            turpis molestie, dictum est a, mattis tellus. Sed dignissim, metus
            nec fringilla accumsan, risus sem sollicitudin lacus, ut interdum
            tellus elit sed risus.
          </p>
        </div>
        {
          [
            "Nauczyciel",
            "Nauczyciel wspomagający",
            "Nauczyciel wspomagający",
            "Nauczyciel wspomagający",
          ].map((item) => (
            <div class="bg-secondary-200 rounded-r_20 px-6 py-8 mb-8">
              <div class="flex flex-wrap gap-4 md:gap-8 items-end md:items-center">
                <>
                  <h5 class="w-1/2 md:w-auto order-1 ">Stanowisko</h5>
                  <h5 class="text-primary-300 order-3 w-full md:w-auto md:order-2">
                    {item}
                  </h5>
                </>
                <span class="text-primary-300 text-sm font-medium md:ml-auto order-2 block flex-1 text-right md:order-3 ">
                  2023.07.21
                </span>
              </div>
              <div class="h-[1px] w-wull bg-primary-400/20 mt-4 mb-6" />

              <div class="flex items-center flex-wrap gap-4 md:gap-0 ">
                <p class="text-sm font-medium md:mr-14 flex-1 md:flex-none text-left">
                  Status rekrutacji:
                </p>
                <span class="bg-primary-200 px-8 py-2 rounded-lg w-1/2 md:w-auto">
                  Otwarta
                </span>
                <button class="btn primary !py-5 !px-8 !min-w-[0] md:!mr-4 w-full md:w-auto">
                  Aplikuj
                </button>
                <a
                  href="/kariera/oferta-pracy"
                  class="btn bg-white !py-5 !px-8 !min-w-[0] w-full md:w-auto md:!ml-0 md:!mr-0 hover:bg-primary-200"
                >
                  Pokaż więcej
                </a>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
  <Footer />
</Layout>
<script is:inline src="/script.js"></script>
