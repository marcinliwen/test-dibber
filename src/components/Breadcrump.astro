---
const { breadcrumps } = Astro.props;
---

<section class="mb-12 md:mb-[100px]">
  <div class="wrapper">
    <ul class="flex gap-1 md:gap-5 items-center text-sm md:text-base">
      <li>
        <a href="/">
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 h-5 md:w-6 md:h-6"
          >
            <mask
              id="mask0_127_4618"
              style="mask-type:alpha"
              maskUnits="userSpaceOnUse"
              x="0"
              y="0"
              width="24"
              height="24"
            >
              <rect width="24" height="24" fill="#D9D9D9"></rect>
            </mask>
            <g mask="url(#mask0_127_4618)">
              <path
                d="M6 19H9V13H15V19H18V10L12 5.5L6 10V19ZM4 21V9L12 3L20 9V21H13V15H11V21H4Z"
                fill="#094F0C"></path>
            </g>
          </svg>
        </a>
      </li>
      {
        breadcrumps.map((item) => (
          <li class="flex gap-1 md:gap-4 items-center">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              class="w-5 h-5 md:w-6 md:h-6"
            >
              <path
                d="M10.3567 19L9 17.7575L15.2866 12L9 6.2425L10.3567 5L18 12L10.3567 19Z"
                fill="#094F0C"
              />
            </svg>
            <a href={item.link}>{item.name}</a>
          </li>
        ))
      }
    </ul>
  </div>
</section>
